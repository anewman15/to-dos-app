{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "arrow-parens": "off",
      "indent": [2, "tab"],
      "no-tabs": 0,
      "import/no-cycle": "off",
      "no-restricted-globals": "off",
      "no-alert": "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }